@using WebApplication1.Controllers
@model List<Rehber>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Firma</th>
        <th>Sil</th>
        <th>Guncelle</th>
    </tr>
    @foreach(var r in Model)
            {
                <tr>
                    <td>@r.Ad</td>
                    <td>@r.Soyad</td>
                    <td>@r.Firma</td>
                    <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-outline-success">Guncelle</a></td>
                </tr>
            }
</table>

